          <article class="blog-card" onclick="window.location.href='/blog/<%= blog.slug %>'" data-category="<%= blog.category %>" data-likes="<%= blog.like_count %>" data-comments="<%= blog.comment_count %>" data-date="<%= blog.created_at %>">
            <img src="<%= categoryImages[blog.category.toLowerCase()] || categoryImages['technology'] %>" 
                 alt="<%= blog.title %>" 
                 class="blog-card-image"
                 style="width: 100%; height: 200px; object-fit: cover; display: block; position: relative;" />
            <span class="blog-card-badge" style="position: absolute; top: 12px; left: 12px;"><%= blog.category %></span>
            <div class="blog-card-content">
              <div class="blog-card-meta">
                <span><i class="fas fa-user"></i> <%= blog.author_name %></span>
                <span>â€¢</span>
                <span><i class="fas fa-clock"></i> <%= new Date(blog.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></span>
              </div>
              <h3 class="blog-card-title"><%= blog.title %></h3>
              <p class="blog-card-excerpt"><%= blog.content.substring(0, 150) %>...</p>
              <div class="blog-card-footer">
                <div class="blog-card-stats">
                  <span class="blog-card-stat">
                    <i class="fas fa-heart"></i>
                    <%= blog.like_count || 0 %>
                  </span>
                  <span class="blog-card-stat comments">
                    <i class="fas fa-comment"></i>
                    <%= blog.comment_count || 0 %>
                  </span>
                </div>
                <span class="blog-card-cta">
                  Read More <i class="fas fa-arrow-right"></i>
                </span>
              </div>
            </div>
          </article>
        <% }); %>
      <% } %>
    </div>
  </div>
</div>

<script>
  // Filter functionality
  const filterTabs = document.querySelectorAll('.filter-tab');
  const sortSelect = document.getElementById('sortSelect');
  const blogGrid = document.getElementById('blogGrid');
  const searchInput = document.getElementById('searchBlogs');
  const categoryLinks = document.querySelectorAll('[data-category]');

  let currentFilter = 'all';
  let currentCategory = 'all';

  // Tab filtering
  filterTabs.forEach(tab => {
    tab.addEventListener('click', () => {
      filterTabs.forEach(t => t.classList.remove('active'));
      tab.classList.add('active');
      currentFilter = tab.dataset.filter;
      applyFilters();
    });
  });

  // Category filtering
  categoryLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      currentCategory = link.dataset.category;
      applyFilters();
    });
  });

  // Sort functionality
  sortSelect.addEventListener('change', (e) => {
    const sortType = e.target.value;
    sortBlogs(sortType);
  });

  // Search functionality
  searchInput.addEventListener('input', (e) => {
    const searchTerm = e.target.value.toLowerCase();
    const cards = blogGrid.querySelectorAll('.blog-card');
    
    cards.forEach(card => {
      const title = card.querySelector('.blog-card-title').textContent.toLowerCase();
      const excerpt = card.querySelector('.blog-card-excerpt').textContent.toLowerCase();
      
      if (title.includes(searchTerm) || excerpt.includes(searchTerm)) {
        card.style.display = 'block';
      } else {
        card.style.display = 'none';
      }
    });
  });

  function applyFilters() {
    const cards = Array.from(blogGrid.querySelectorAll('.blog-card'));
    
    cards.forEach(card => {
      let showCard = true;

      // Category filter
      if (currentCategory !== 'all') {
        showCard = card.dataset.category.toLowerCase() === currentCategory;
      }

      // Filter tabs
      if (currentFilter === 'popular' && showCard) {
        const totalEngagement = parseInt(card.dataset.likes) + parseInt(card.dataset.comments);
        showCard = totalEngagement > 5;
      } else if (currentFilter === 'recent' && showCard) {
        const date = new Date(card.dataset.date);
        const weekAgo = new Date();
        weekAgo.setDate(weekAgo.getDate() - 7);
        showCard = date > weekAgo;
      }

      card.style.display = showCard ? 'block' : 'none';
    });
  }

  function sortBlogs(sortType) {
    const cards = Array.from(blogGrid.querySelectorAll('.blog-card'));
    
    cards.sort((a, b) => {
      switch(sortType) {
        case 'popular':
          const engagementA = parseInt(a.dataset.likes) + parseInt(a.dataset.comments);
          const engagementB = parseInt(b.dataset.likes) + parseInt(b.dataset.comments);
          return engagementB - engagementA;
        
        case 'likes':
          return parseInt(b.dataset.likes) - parseInt(a.dataset.likes);
        
        case 'comments':
          return parseInt(b.dataset.comments) - parseInt(a.dataset.comments);
        
        case 'recent':
        default:
          return new Date(b.dataset.date) - new Date(a.dataset.date);
      }
    });

    cards.forEach(card => blogGrid.appendChild(card));
  }

  // Mobile sidebar toggle
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const userSidebar = document.getElementById('userSidebar');

  if (mobileMenuBtn) {
    mobileMenuBtn.addEventListener('click', () => {
      userSidebar.classList.toggle('active');
    });
  }
</script>