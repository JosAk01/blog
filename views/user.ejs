<%- include('partials/header'); -%>

<style>
  /* Modern Sidebar Styles */
  .sidebar {
    position: fixed;
    top: 90px;
    left: 0;
    height: calc(100vh - 90px);
    width: 280px;
    background: #ffffff;
    border-right: 1px solid #e9eaf3;
    overflow-y: auto;
    box-shadow: 2px 0 12px rgba(0, 0, 0, 0.04);
    z-index: 100;
  }

  .sidebar::-webkit-scrollbar {
    width: 6px;
  }

  .sidebar::-webkit-scrollbar-thumb {
    background: #d0d5dd;
    border-radius: 10px;
  }

  .sidebar-header {
    padding: 24px 20px;
    border-bottom: 1px solid #f0f1f5;
    background: linear-gradient(135deg, #f8f9fc 0%, #ffffff 100%);
  }

  .sidebar-user {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .sidebar-avatar {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: linear-gradient(135deg, #5a5df5, #9a6bff);
    display: grid;
    place-items: center;
    color: white;
    font-weight: 800;
    font-size: 20px;
    box-shadow: 0 4px 12px rgba(90, 93, 245, 0.25);
  }

  .sidebar-user-info h5 {
    font-size: 15px;
    font-weight: 700;
    color: #0b1020;
    margin: 0;
  }

  .sidebar-user-role {
    font-size: 12px;
    color: #5c6074;
    margin: 4px 0 0;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .sidebar-search {
    padding: 16px 20px;
    border-bottom: 1px solid #f0f1f5;
  }

  .sidebar-search-wrapper {
    position: relative;
  }

  .sidebar-search-input {
    width: 100%;
    padding: 10px 16px 10px 40px;
    border: 1px solid #e9eaf3;
    border-radius: 10px;
    background: #f8f9fc;
    font-size: 14px;
  }

  .sidebar-search-icon {
    position: absolute;
    left: 14px;
    top: 50%;
    transform: translateY(-50%);
    color: #98a2b3;
  }

  .sidebar-nav {
    padding: 12px 0;
  }

  .sidebar-nav-title {
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #98a2b3;
    padding: 12px 20px 8px;
  }

  .sidebar-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar-nav a {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 20px;
    color: #5c6074;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.3s;
  }

  .sidebar-nav a:hover {
    background: #f8f9fc;
    color: #5a5df5;
  }

  .sidebar-nav a.active {
    background: linear-gradient(90deg, #eef0ff 0%, transparent 100%);
    color: #5a5df5;
    border-left: 3px solid #5a5df5;
  }

  .sidebar-nav a i {
    font-size: 18px;
    width: 24px;
  }

  /* Main Content */
  .main-content {
    margin-left: 280px;
    padding: 30px;
    min-height: calc(100vh - 90px);
    background: #f8f9fc;
  }

  .page-header {
    margin-bottom: 30px;
  }

  .page-header h1 {
    font-size: 28px;
    font-weight: 800;
    color: #0b1020;
    margin-bottom: 8px;
  }

  .page-header p {
    color: #5c6074;
    font-size: 15px;
  }

  /* Filter Bar */
  .filter-bar {
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    margin-bottom: 24px;
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter-group {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .filter-group label {
    font-size: 14px;
    font-weight: 600;
    color: #5c6074;
  }

  .filter-select {
    padding: 8px 16px;
    border: 1px solid #e9eaf3;
    border-radius: 8px;
    background: #f8f9fc;
    font-size: 14px;
    font-weight: 600;
    color: #0b1020;
    cursor: pointer;
  }

  .filter-tabs {
    display: flex;
    gap: 8px;
    flex: 1;
  }

  .filter-tab {
    padding: 8px 16px;
    border: 1px solid #e9eaf3;
    background: white;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    color: #5c6074;
    cursor: pointer;
    transition: all 0.3s;
  }

  .filter-tab:hover {
    background: #f8f9fc;
  }

  .filter-tab.active {
    background: linear-gradient(135deg, #5a5df5, #9a6bff);
    color: white;
    border-color: transparent;
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 24px;
  }

  .blog-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .blog-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
  }

  .blog-card-image {
    height: 200px;
    position: relative;
    overflow: hidden;
  }

  .blog-card-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 700;
    color: #5a5df5;
    z-index: 2;
  }

  .blog-card-content {
    padding: 20px;
  }

  .blog-card-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: #5c6074;
    margin-bottom: 12px;
  }

  .blog-card-title {
    font-size: 18px;
    font-weight: 700;
    color: #0b1020;
    margin-bottom: 8px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-card-excerpt {
    font-size: 14px;
    color: #5c6074;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: 16px;
  }

  .blog-card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 16px;
    border-top: 1px solid #f0f1f5;
  }

  .blog-card-stats {
    display: flex;
    gap: 16px;
    font-size: 14px;
    color: #5c6074;
  }

  .blog-card-stat {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .blog-card-stat i {
    color: #e74c3c;
  }

  .blog-card-stat.comments i {
    color: #3498db;
  }

  .blog-card-cta {
    color: #5a5df5;
    font-weight: 700;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 80px 20px;
    background: white;
    border-radius: 16px;
    grid-column: 1 / -1;
  }

  .empty-state-icon {
    font-size: 64px;
    color: #e9eaf3;
    margin-bottom: 20px;
  }

  .empty-state h3 {
    font-size: 24px;
    color: #0b1020;
    margin-bottom: 8px;
  }

  .empty-state p {
    color: #5c6074;
    font-size: 15px;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .sidebar {
      transform: translateX(-100%);
      z-index: 1000;
    }

    .sidebar.active {
      transform: translateX(0);
    }

    .main-content {
      margin-left: 0;
    }
  }

  @media (max-width: 640px) {
    .main-content {
      padding: 20px 16px;
    }

    .filter-bar {
      flex-direction: column;
      align-items: stretch;
    }

    .filter-tabs {
      flex-direction: column;
    }
  }
</style>

