    .blog-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }
    .tag {
      background: #ecf0f1;
      padding: 0.3rem 0.8rem;
      border-radius: 20px;
      font-size: 0.85rem;
      color: #34495e;
    }
    .blog-actions {
      display: flex;
      gap: 1rem;
      margin-top: 1.5rem;
    }
    .like-btn {
      display: flex;
